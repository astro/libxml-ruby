#!/usr/bin/env ratch

# Create a XML-formatted changelog.

config  = configuration['log']
xmlfile = config['xmlfile'] || 'doc/changelog.xml'
xslfile = File.join(File.dirname(xmlog), 'changelog.xsl')

#

main :svn_xlog do
  build xmlfile
end

# XML-fromated changelog.

file xmlfile do
  text = `svn log --xml`
  i = text.index("?>\n")
  text.insert(i+2, "\n" + '<?xml-stylesheet href="changelog.xsl" type="text/xsl" ?>')

  if dryrun?
    puts text
  else
    File.open(xmlfile){ |f| f << text }
  end
end

#

file xslfile do
  unless File.exist?(xslfile)
    File.open(xslfile, 'w') do |f|
      f << __DATA__.read
    end
  end
end

__END__

<?xml version="1.0" encoding="ISO-8859-1"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">

  <xsl:output cdata-section-elements="script"/>

  <xsl:template match="/">

    <html>
      <head>
        <title>Changelog</title>
        <link REL='SHORTCUT ICON' HREF="../img/ruby-sm.png" />
        <style>
          td { font-family: sans-serif;  padding: 0px 10px; }
        </style>
      </head>
      <body>
      <div class="container">
        <h1>Changelog</h1>
        <table style="width: 100%;">
          <xsl:apply-templates />
        </table>
      </div>
      </body>
    </html>

  </xsl:template>

  <xsl:template match="logentry">
      <tr>
        <td><b><pre><xsl:value-of select="msg"/></pre></b></td>
        <td><xsl:value-of select="author"/></td>
        <td><xsl:value-of select="date"/></td>
      </tr>
  </xsl:template>

</xsl:stylesheet>
