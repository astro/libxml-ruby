#!/usr/bin/env ratch

# compile extensions

task :compile do
  build "ext/libxml/Makefile"
  cd("ext/libxml") do
    make
  end
end

file "ext/libxml/Makefile" do
  cd("ext/libxml") do
    ruby "extconf.rb"
  end
end

